{% extends "base.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            {% for produit in produits %}
            <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <img src="https://upload.wikimedia.org/wikipedia/en/thumb/a/a4/Flag_of_the_United_States.svg/1200px-Flag_of_the_United_States.svg.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.name }}</h5>
                        <a href="{{ path('cart_add', {'id': produit.id}) }}" class="btn btn-primary">Acheter</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}