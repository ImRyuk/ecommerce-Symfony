{% extends 'admin/base_admin.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="row">
        <h1 class="text-center">{{ produit.name }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ produit.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        {% if produit.filename %}
            <h3>Fichier Image du produit : {{ produit.filename }}</h3>
            <img src="{{ vich_uploader_asset(produit, 'imageFile' ) | imagine_filter('thumb') }}" class="card-img-top" alt="..."
                 style="width: 100%;height: auto;max-width: 300px;max-height: 250px">
        {% else %}
            <h3>Fichier Image du produit : Aucun</h3>
        {% endif %}
    </div>
    <div class="row">
        <a class="col-4" href="{{ path('produit_index') }}">back to list</a>

        <a class="col-4" href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>

        {{ include('produit/_delete_form.html.twig') }}
    </div>
{% endblock %}
